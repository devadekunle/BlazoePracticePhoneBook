@page "/details/{ContactId}"
@inherits ContactDetailBase

<div class="row my-3">
    
    <div class="col-md-8 card shadow-lg offset-2 p-4">
        <div class="row">
            <div class="p-2 my-3">
                <img src="@($"https://picsum.photos/id/{Contact.Id}/700/400")" alt="" class="rounded mx-auto d-block" />
            </div>
            <br />
            <hr />
        </div>
        <form>
            <div class="row">
                <div class="col-md-6 p-1">
                    <div class="form-group">
                        <label for="exampleInputEmail1">First Name</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" value="@Contact.FirstName">
                    </div>
                </div>
                <div class="col-md-6 p-1">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Last Name</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" value="@Contact.LastName">
                    </div>
                </div>
                <div class="col-md-6 p-1">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Phone Number</label>
                        <input type="tel" class="form-control" value="@Contact.Phone">
                    </div>
                </div>
                <div class="col-md-6 p-1">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Email</label>
                        <input type="email" class="form-control" value="@Contact.Email">
                    </div>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-outline-success w-100">Submit</button>
                </div>
                <div class="col-md-6">
                    <NavLink  class="btn btn-outline-primary w-100" href="contacts">Back</NavLink>
                </div>
            </div>
            
        </form>
    </div>


</div>


